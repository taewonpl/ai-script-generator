# Project Service Environment Configuration
# Copy to .env and configure for your environment

# ============================================================================
# Service Configuration
# ============================================================================
SERVICE_NAME=project-service
PORT=8001
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/project_db  # pragma: allowlist secret

# ============================================================================
# Data Paths
# ============================================================================
DATA_ROOT_PATH=/app/data
LOG_DATA_PATH=/app/data/logs
CACHE_DATA_PATH=/app/data/cache

# ============================================================================
# External Services
# ============================================================================
GENERATION_SERVICE_URL=http://generation-service:8002

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","http://frontend:3000"]

# ============================================================================
# Episode Monitoring Configuration
# ============================================================================
MONITORING_ENABLED=true
INTEGRITY_CHECK_INTERVAL_MINUTES=30
DEEP_CHECK_INTERVAL_HOURS=6
ALERT_ON_ISSUES=true
AUTO_FIX_ENABLED=false

# ============================================================================
# Alerting Configuration (Optional)
# ============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# GENERAL_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# ============================================================================
# Performance Settings
# ============================================================================
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL_HOURS=24

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
STRUCTURED_LOGGING=true
