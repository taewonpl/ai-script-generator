# Environment variables for Generation Service Docker deployment

# Application settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Service configuration
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_PERFORMANCE_OPTIMIZATION=true

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here  # pragma: allowlist secret

# Database configuration - SQLite + ChromaDB
DATA_ROOT_PATH=/app/data
SQLITE_DATABASE_PATH=/app/data/app.db
CHROMA_PERSIST_DIRECTORY=/app/data/chroma

# Monitoring and observability
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here  # pragma: allowlist secret
GRAFANA_SECRET_KEY=your_secure_grafana_secret_key_here  # pragma: allowlist secret

# Performance settings
MAX_WORKERS=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE=2

# Security settings
JWT_SECRET_KEY=your_jwt_secret_key_here  # pragma: allowlist secret
ENCRYPTION_KEY=your_encryption_key_here  # pragma: allowlist secret

# External API settings (if needed)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Health check settings
HEALTH_CHECK_HOST=localhost
HEALTH_CHECK_PORT=8000
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_ENDPOINT=/api/monitoring/health
HEALTH_CHECK_MAX_RETRIES=3

# Logging settings
LOG_FORMAT=json
LOG_FILE=/app/logs/generation-service.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Cache settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512
CACHE_CLEANUP_INTERVAL=300

# Performance targets
TARGET_WORKFLOW_EXECUTION_TIME=30
TARGET_CONCURRENT_WORKFLOWS=20
TARGET_API_RESPONSE_TIME_MS=100
TARGET_MEMORY_LIMIT_MB=2048
TARGET_CACHE_HIT_RATIO=0.7
TARGET_SUCCESS_RATE=0.95
