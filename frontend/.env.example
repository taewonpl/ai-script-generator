# Backend Services URLs
REACT_APP_CORE_SERVICE_URL=http://localhost:8000
REACT_APP_PROJECT_SERVICE_URL=http://localhost:8001
REACT_APP_GENERATION_SERVICE_URL=http://localhost:8002

# Environment
REACT_APP_ENV=development

# WebSocket URLs (optional - will be auto-derived from service URLs)
REACT_APP_CORE_WS_URL=ws://localhost:8000
REACT_APP_PROJECT_WS_URL=ws://localhost:8001
REACT_APP_GENERATION_WS_URL=ws://localhost:8002

# API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# Feature Flags
REACT_APP_ENABLE_REALTIME_UPDATES=true
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_ANALYTICS=true

# Development Settings
REACT_APP_DEBUG_API=false
REACT_APP_MOCK_API=false
