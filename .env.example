# Database Configuration
POSTGRES_PASSWORD=postgres123  # pragma: allowlist secret
POSTGRES_DB=ai_script_generator
POSTGRES_USER=postgres

# Redis Configuration
REDIS_PASSWORD=redis123  # pragma: allowlist secret

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production  # pragma: allowlist secret

